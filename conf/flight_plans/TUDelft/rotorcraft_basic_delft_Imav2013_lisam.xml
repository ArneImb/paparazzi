    <waypoint lat="43.4501244556801" lon="1.26423849761234" name="_FA7"/>
    <waypoint lat="43.4513493296649" lon="1.26377733227803" name="_SFA1"/>
    <waypoint lat="43.4526890787549" lon="1.2601892363434" name="_SFA2"/>
    <waypoint lat="43.4491715729295" lon="1.25765299277696" name="_SFA3"/>
    <waypoint lat="43.4461168338121" lon="1.2665883289167" name="_SFA4"/>
    <waypoint lat="43.4483425357094" lon="1.26810497090376" name="_SFA5"/>
    <waypoint lat="43.4497064227008" lon="1.26599436021769" name="_SFA6"/>
    <waypoint lat="43.4502080829671" lon="1.26462792069584" name="_SFA7"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="_FA7"/>
      <corner name="_FA6"/>
      <corner name="_FA5"/>
      <corner name="_FA4"/>
      <corner name="_FA3"/>
      <corner name="_FA2"/>
      <corner name="_FA1"/>
    </sector>
    <sector color="orange" name="Small_Flight_Area">
      <corner name="_SFA7"/>
      <corner name="_SFA6"/>
      <corner name="_SFA5"/>
      <corner name="_SFA4"/>
      <corner name="_SFA3"/>
      <corner name="_SFA2"/>
      <corner name="_SFA1"/>
    </sector>
  </sectors>
  <exceptions>
    <exception cond="Or(! InsideSmall_Flight_Area(GetPosX(), GetPosY()), GetPosAlt() > ground_alt + 70) && !(nav_block == BLOCK_Init) && !(nav_block == BLOCK_Landed)" deroute="Standby"/>
  </exceptions>
  <blocks>
    <block name="Init">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid() || gps.pacc > 500 || !(ahrs.status == AHRS_RUNNING)"/>
    </block>
    <block name="Geo init">
      <call fun="NavSetAltitudeReferenceHere()"/>
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <call fun="NavSetWaypointHere(WP_HOME)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
    </block>
    <block name="Start Engine" strip_button="Takeoff" strip_icon="takeoff.png">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="TRUE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <set value="0" var="autopilot_flight_time"/>
      <exception cond="!autopilot_motors_on" deroute="Start Engine"/>
      <exception cond="stateGetPositionEnu_f()->z > 3.0" deroute="Climb"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <attitude pitch="0" roll="0" throttle="0.5" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Climb">
      <exception cond="stateGetPositionEnu_f()->z > 15.0" deroute="Standby"/>
      <stay climb="0.8" vmode="climb" wp="STDBY"/>
    </block>
    <block name="Standby" pre_call="if (!InsideFlight_Area(GetPosX(), GetPosY())) NavKillThrottle();">
      <exception cond="And(InsideSmall_Flight_Area(GetPosX(),GetPosY()),ground_alt + 70 > GetPosAlt())" deroute="line_ARCH_WEST_ARCH_EAST"/>
      <stay wp="STDBY"/>
    </block>
    <block name="line_ARCH_WEST_ARCH_EAST">
      <go from="ARCH_WEST" hmode="route" wp="ARCH_EAST"/>
      <stay until="stage_time>5" wp="ARCH_EAST"/>
      <go from="ARCH_EAST" hmode="route" wp="ARCH_WEST"/>
    </block>
    <block name="Land">
      <go wp="VTOL"/>
    </block>
    <block name="Flare">
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <stay climb="-0.8" vmode="climb" wp="VTOL"/>
    </block>
    <block name="Landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
