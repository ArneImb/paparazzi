<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="195" ground_alt="180" lat0="43.449441" lon0="1.265280" max_dist_from_home="1000" name="IMAV2013_ROTORCRAFT" qfu="190" security_height="15">
  <header>
#include "autopilot.h"
#include "subsystems/ahrs.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0" y="0"/>
    <waypoint height="15" name="STDBY" x="11" y="80"/>
